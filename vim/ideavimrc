set incsearch
set ignorecase
set relativenumber
set number
set showmode

" General remaps
let mapleader = " " 
nnoremap <leader>j <C-W><C-J>
nnoremap <leader>k <C-W><C-K>
nnoremap <leader>l <C-W><C-L>
nnoremap <leader>h <C-W><C-H>

" Enable select vim plugins supported by IntelliJ IDEA
set surround
set commentary
set NERDTree

" Source some plugin configs
source ~/.dotfiles/vim/nerdtree.vim