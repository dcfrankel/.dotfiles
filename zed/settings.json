// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "telemetry": {
    "diagnostics": false,
    "metrics": true
  },
  "confirm_quit": true,
  "cursor_blink": true,
  "cursor_shape": "bar",
  "bottom_dock_layout": "full",
  "icon_theme": "Material Icon Theme",
  "agent_servers": {
    "your_agent": {
      "command": "path_to_executable",
      "args": [],
      "env": {}
    },
    "gemini": {
      "ignore_system_version": false
    }
  },
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_smartcase_find": true
  },
  "ui_font_size": 17,
  "buffer_font_size": 14,
  "show_whitespaces": "all",
  "theme": {
    "mode": "system",
    "light": "Rosé Pine Moon",
    "dark": "Catppuccin Frappé"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "max_tabs": 10,
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "minimap": {
    "show": "always"
  },
  "languages": {
    "Shell Script": {
      "tab_size": 2
    },
    "Lua": {
      "tab_size": 2
    }
  },
  "indent_guides": {
    "coloring": "indent_aware",
    "background_coloring": "indent_aware"
  },
  "format_on_save": "off",
  "buffer_font_family": "Hack",
  "buffer_font_fallbacks": ["JetBrains Mono", ".ZedMono"],
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true,
    "show_sign_in": false
  },
  "project_panel": {
    "auto_fold_dirs": false
  },
  "collaboration_panel": {
    "button": false
  },
  "theme_overrides": {
    "Rosé Pine Moon": {
      "vim.mode.text": "#232136",
      "vim.normal.background": "#f6c177",
      "vim.insert.background": "#ea9a97",
      "vim.visual.background": "#9ccfd8",
      "vim.visual_line.background": "#9ccfd8",
      "vim.visual_block.background": "#9ccfd8"
    }
  },
  "file_types": {
    // Get helm files to match correctly
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml",
      "**/values*.yaml"
    ]
  },
  "sticky_scroll": { "enabled": true }
}
